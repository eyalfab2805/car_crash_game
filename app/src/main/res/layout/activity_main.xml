<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#555555"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/coinsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="60dp"
        android:text="Coins: 0"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/odometerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:text="Distance: 0"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"/>


    <LinearLayout
        android:id="@+id/heartContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="16dp">



        <ImageView
            android:id="@+id/heart1"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_heart"/>

        <ImageView
            android:id="@+id/heart2"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="4dp"
            android:src="@drawable/ic_heart"/>

        <ImageView
            android:id="@+id/heart3"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="4dp"
            android:src="@drawable/ic_heart"/>
    </LinearLayout>

    <GridLayout
        android:id="@+id/roadGrid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/heartContainer"
        android:layout_above="@id/controlsLayout"
        android:layout_margin="16dp"
        android:rowCount="8"
        android:columnCount="11"
        android:background="#333333">

        <View
            android:layout_row="0"
            android:layout_rowSpan="8"
            android:layout_column="0"
            android:layout_width="6dp"
            android:layout_height="match_parent"
            android:background="@drawable/road_edge"/>

        <View
            android:layout_row="0"
            android:layout_rowSpan="8"
            android:layout_column="2"
            android:layout_width="6dp"
            android:layout_height="match_parent"
            android:background="@drawable/lane_dash"/>

        <View
            android:layout_row="0"
            android:layout_rowSpan="8"
            android:layout_column="4"
            android:layout_width="6dp"
            android:layout_height="match_parent"
            android:background="@drawable/lane_dash"/>

        <View
            android:layout_row="0"
            android:layout_rowSpan="8"
            android:layout_column="6"
            android:layout_width="6dp"
            android:layout_height="match_parent"
            android:background="@drawable/lane_dash"/>

        <View
            android:layout_row="0"
            android:layout_rowSpan="8"
            android:layout_column="8"
            android:layout_width="6dp"
            android:layout_height="match_parent"
            android:background="@drawable/lane_dash"/>

        <View
            android:layout_row="0"
            android:layout_rowSpan="8"
            android:layout_column="10"
            android:layout_width="6dp"
            android:layout_height="match_parent"
            android:background="@drawable/road_edge"/>

        <ImageView android:id="@+id/cell_0_0" android:layout_row="0" android:layout_column="1" android:layout_width="0dp" android:layout_height="0dp" android:layout_rowWeight="1" android:layout_columnWeight="1" android:visibility="invisible"/>
        <ImageView android:id="@+id/cell_0_1" android:layout_row="0" android:layout_column="3" android:layout_width="0dp" android:layout_height="0dp" android:layout_rowWeight="1" android:layout_columnWeight="1" android:visibility="invisible"/>
        <ImageView android:id="@+id/cell_0_2" android:layout_row="0" android:layout_column="5" android:layout_width="0dp" android:layout_height="0dp" android:layout_rowWeight="1" android:layout_columnWeight="1" android:visibility="invisible"/>
        <ImageView android:id="@+id/cell_0_3" android:layout_row="0" android:layout_column="7" android:layout_width="0dp" android:layout_height="0dp" android:layout_rowWeight="1" android:layout_columnWeight="1" android:visibility="invisible"/>
        <ImageView android:id="@+id/cell_0_4" android:layout_row="0" android:layout_column="9" android:layout_width="0dp" android:layout_height="0dp" android:layout_rowWeight="1" android:layout_columnWeight="1" android:visibility="invisible"/>

        <ImageView android:id="@+id/cell_1_0" android:layout_row="1" android:layout_column="1" android:layout_width="0dp" android:layout_height="0dp" android:layout_rowWeight="1" android:layout_columnWeight="1" android:visibility="invisible"/>
        <ImageView android:id="@+id/cell_1_1" android:layout_row="1" android:layout_column="3" android:layout_width="0dp" android:layout_height="0dp" android:layout_rowWeight="1" android:layout_columnWeight="1" android:visibility="invisible"/>
        <ImageView android:id="@+id/cell_1_2" android:layout_row="1" android:layout_column="5" android:layout_width="0dp" android:layout_height="0dp" android:layout_rowWeight="1" android:layout_columnWeight="1" android:visibility="invisible"/>
        <ImageView android:id="@+id/cell_1_3" android:layout_row="1" android:layout_column="7" android:layout_width="0dp" android:layout_height="0dp" android:layout_rowWeight="1" android:layout_columnWeight="1" android:visibility="invisible"/>
        <ImageView android:id="@+id/cell_1_4" android:layout_row="1" android:layout_column="9" android:layout_width="0dp" android:layout_height="0dp" android:layout_rowWeight="1" android:layout_columnWeight="1" android:visibility="invisible"/>

        <ImageView android:id="@+id/cell_2_0" android:layout_row="2" android:layout_column="1" android:layout_width="0dp" android:layout_height="0dp" android:layout_rowWeight="1" android:layout_columnWeight="1" android:visibility="invisible"/>
        <ImageView android:id="@+id/cell_2_1" android:layout_row="2" android:layout_column="3" android:layout_width="0dp" android:layout_height="0dp" android:layout_rowWeight="1" android:layout_columnWeight="1" android:visibility="invisible"/>
        <ImageView android:id="@+id/cell_2_2" android:layout_row="2" android:layout_column="5" android:layout_width="0dp" android:layout_height="0dp" android:layout_rowWeight="1" android:layout_columnWeight="1" android:visibility="invisible"/>
        <ImageView android:id="@+id/cell_2_3" android:layout_row="2" android:layout_column="7" android:layout_width="0dp" android:layout_height="0dp" android:layout_rowWeight="1" android:layout_columnWeight="1" android:visibility="invisible"/>
        <ImageView android:id="@+id/cell_2_4" android:layout_row="2" android:layout_column="9" android:layout_width="0dp" android:layout_height="0dp" android:layout_rowWeight="1" android:layout_columnWeight="1" android:visibility="invisible"/>

        <ImageView android:id="@+id/cell_3_0" android:layout_row="3" android:layout_column="1" android:layout_width="0dp" android:layout_height="0dp" android:layout_rowWeight="1" android:layout_columnWeight="1" android:visibility="invisible"/>
        <ImageView android:id="@+id/cell_3_1" android:layout_row="3" android:layout_column="3" android:layout_width="0dp" android:layout_height="0dp" android:layout_rowWeight="1" android:layout_columnWeight="1" android:visibility="invisible"/>
        <ImageView android:id="@+id/cell_3_2" android:layout_row="3" android:layout_column="5" android:layout_width="0dp" android:layout_height="0dp" android:layout_rowWeight="1" android:layout_columnWeight="1" android:visibility="invisible"/>
        <ImageView android:id="@+id/cell_3_3" android:layout_row="3" android:layout_column="7" android:layout_width="0dp" android:layout_height="0dp" android:layout_rowWeight="1" android:layout_columnWeight="1" android:visibility="invisible"/>
        <ImageView android:id="@+id/cell_3_4" android:layout_row="3" android:layout_column="9" android:layout_width="0dp" android:layout_height="0dp" android:layout_rowWeight="1" android:layout_columnWeight="1" android:visibility="invisible"/>

        <ImageView android:id="@+id/cell_4_0" android:layout_row="4" android:layout_column="1" android:layout_width="0dp" android:layout_height="0dp" android:layout_rowWeight="1" android:layout_columnWeight="1" android:visibility="invisible"/>
        <ImageView android:id="@+id/cell_4_1" android:layout_row="4" android:layout_column="3" android:layout_width="0dp" android:layout_height="0dp" android:layout_rowWeight="1" android:layout_columnWeight="1" android:visibility="invisible"/>
        <ImageView android:id="@+id/cell_4_2" android:layout_row="4" android:layout_column="5" android:layout_width="0dp" android:layout_height="0dp" android:layout_rowWeight="1" android:layout_columnWeight="1" android:visibility="invisible"/>
        <ImageView android:id="@+id/cell_4_3" android:layout_row="4" android:layout_column="7" android:layout_width="0dp" android:layout_height="0dp" android:layout_rowWeight="1" android:layout_columnWeight="1" android:visibility="invisible"/>
        <ImageView android:id="@+id/cell_4_4" android:layout_row="4" android:layout_column="9" android:layout_width="0dp" android:layout_height="0dp" android:layout_rowWeight="1" android:layout_columnWeight="1" android:visibility="invisible"/>

        <ImageView android:id="@+id/cell_5_0" android:layout_row="5" android:layout_column="1" android:layout_width="0dp" android:layout_height="0dp" android:layout_rowWeight="1" android:layout_columnWeight="1" android:visibility="invisible"/>
        <ImageView android:id="@+id/cell_5_1" android:layout_row="5" android:layout_column="3" android:layout_width="0dp" android:layout_height="0dp" android:layout_rowWeight="1" android:layout_columnWeight="1" android:visibility="invisible"/>
        <ImageView android:id="@+id/cell_5_2" android:layout_row="5" android:layout_column="5" android:layout_width="0dp" android:layout_height="0dp" android:layout_rowWeight="1" android:layout_columnWeight="1" android:visibility="invisible"/>
        <ImageView android:id="@+id/cell_5_3" android:layout_row="5" android:layout_column="7" android:layout_width="0dp" android:layout_height="0dp" android:layout_rowWeight="1" android:layout_columnWeight="1" android:visibility="invisible"/>
        <ImageView android:id="@+id/cell_5_4" android:layout_row="5" android:layout_column="9" android:layout_width="0dp" android:layout_height="0dp" android:layout_rowWeight="1" android:layout_columnWeight="1" android:visibility="invisible"/>

        <ImageView android:id="@+id/cell_6_0" android:layout_row="6" android:layout_column="1" android:layout_width="0dp" android:layout_height="0dp" android:layout_rowWeight="1" android:layout_columnWeight="1" android:visibility="invisible"/>
        <ImageView android:id="@+id/cell_6_1" android:layout_row="6" android:layout_column="3" android:layout_width="0dp" android:layout_height="0dp" android:layout_rowWeight="1" android:layout_columnWeight="1" android:visibility="invisible"/>
        <ImageView android:id="@+id/cell_6_2" android:layout_row="6" android:layout_column="5" android:layout_width="0dp" android:layout_height="0dp" android:layout_rowWeight="1" android:layout_columnWeight="1" android:visibility="invisible"/>
        <ImageView android:id="@+id/cell_6_3" android:layout_row="6" android:layout_column="7" android:layout_width="0dp" android:layout_height="0dp" android:layout_rowWeight="1" android:layout_columnWeight="1" android:visibility="invisible"/>
        <ImageView android:id="@+id/cell_6_4" android:layout_row="6" android:layout_column="9" android:layout_width="0dp" android:layout_height="0dp" android:layout_rowWeight="1" android:layout_columnWeight="1" android:visibility="invisible"/>

        <ImageView android:id="@+id/cell_7_0" android:layout_row="7" android:layout_column="1" android:layout_width="0dp" android:layout_height="0dp" android:layout_rowWeight="1" android:layout_columnWeight="1" android:visibility="invisible"/>
        <ImageView android:id="@+id/cell_7_1" android:layout_row="7" android:layout_column="3" android:layout_width="0dp" android:layout_height="0dp" android:layout_rowWeight="1" android:layout_columnWeight="1" android:visibility="invisible"/>
        <ImageView android:id="@+id/cell_7_2" android:layout_row="7" android:layout_column="5" android:layout_width="0dp" android:layout_height="0dp" android:layout_rowWeight="1" android:layout_columnWeight="1" android:visibility="invisible"/>
        <ImageView android:id="@+id/cell_7_3" android:layout_row="7" android:layout_column="7" android:layout_width="0dp" android:layout_height="0dp" android:layout_rowWeight="1" android:layout_columnWeight="1" android:visibility="invisible"/>
        <ImageView android:id="@+id/cell_7_4" android:layout_row="7" android:layout_column="9" android:layout_width="0dp" android:layout_height="0dp" android:layout_rowWeight="1" android:layout_columnWeight="1" android:visibility="invisible"/>

    </GridLayout>

    <LinearLayout
        android:id="@+id/controlsLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageView
            android:id="@+id/btnLeft"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:src="@drawable/left"/>

        <ImageView
            android:id="@+id/btnRight"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:src="@drawable/right"/>
    </LinearLayout>

</RelativeLayout>
