<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#555555"
    tools:context=".MainActivity">

    <!-- Hearts (3 lives) -->
    <LinearLayout
        android:id="@+id/heartContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="16dp">


    <ImageView
            android:id="@+id/heart1"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_heart" />

        <ImageView
            android:id="@+id/heart2"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_heart"
            android:layout_marginStart="4dp" />

        <ImageView
            android:id="@+id/heart3"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_heart"
            android:layout_marginStart="4dp" />
    </LinearLayout>

    <!-- Game grid: 7 rows x 3 columns -->
    <GridLayout
        android:id="@+id/roadGrid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/heartContainer"
        android:layout_above="@id/controlsLayout"
        android:layout_margin="16dp"
        android:rowCount="7"
        android:columnCount="3"
        >
        <!-- cells here -->

    <!-- Row 0 (top) - tyres -->
        <ImageView
            android:id="@+id/cell_0_0"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:src="@drawable/tyre"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/cell_0_1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:src="@drawable/tyre"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/cell_0_2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_column="2"
            android:layout_row="0"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:src="@drawable/tyre"
            android:visibility="invisible" />

        <!-- Row 1 -->
        <ImageView
            android:id="@+id/cell_1_0"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_column="0"
            android:layout_row="1"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:src="@drawable/tyre"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/cell_1_1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_column="1"
            android:layout_row="1"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:src="@drawable/tyre"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/cell_1_2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_column="2"
            android:layout_row="1"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:src="@drawable/tyre"
            android:visibility="invisible" />

        <!-- Row 2 -->
        <ImageView
            android:id="@+id/cell_2_0"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_column="0"
            android:layout_row="2"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:src="@drawable/tyre"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/cell_2_1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_column="1"
            android:layout_row="2"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:src="@drawable/tyre"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/cell_2_2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_column="2"
            android:layout_row="2"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:src="@drawable/tyre"
            android:visibility="invisible" />

        <!-- Row 3 -->
        <ImageView
            android:id="@+id/cell_3_0"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_column="0"
            android:layout_row="3"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:src="@drawable/tyre"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/cell_3_1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_column="1"
            android:layout_row="3"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:src="@drawable/tyre"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/cell_3_2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_column="2"
            android:layout_row="3"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:src="@drawable/tyre"
            android:visibility="invisible" />

        <!-- Row 4 -->
        <ImageView
            android:id="@+id/cell_4_0"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_column="0"
            android:layout_row="4"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:src="@drawable/tyre"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/cell_4_1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_column="1"
            android:layout_row="4"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:src="@drawable/tyre"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/cell_4_2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_column="2"
            android:layout_row="4"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:src="@drawable/tyre"
            android:visibility="invisible" />

        <!-- Row 5 -->
        <ImageView
            android:id="@+id/cell_5_0"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_column="0"
            android:layout_row="5"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:src="@drawable/tyre"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/cell_5_1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_column="1"
            android:layout_row="5"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:src="@drawable/tyre"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/cell_5_2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_column="2"
            android:layout_row="5"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:src="@drawable/tyre"
            android:visibility="invisible" />

        <!-- Row 6 (bottom) - car -->
        <ImageView
            android:id="@+id/cell_6_0"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_column="0"
            android:layout_row="6"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:src="@drawable/car"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/cell_6_1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_column="1"
            android:layout_row="6"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:src="@drawable/car"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/cell_6_2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_column="2"
            android:layout_row="6"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:src="@drawable/car"
            android:visibility="invisible" />

    </GridLayout>


    <View
        android:id="@+id/laneLine1"
        android:layout_width="4dp"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:layout_below="@id/heartContainer"
        android:layout_above="@id/controlsLayout"
        android:layout_marginStart = "145dp" />


    <View
        android:id="@+id/laneLine2"
        android:layout_width="4dp"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:layout_below="@id/heartContainer"
        android:layout_above="@id/controlsLayout"
        android:layout_marginStart="290dp" />


    <LinearLayout
        android:id="@+id/controlsLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp">

        <ImageView
            android:id="@+id/btnLeft"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:src="@drawable/left"
            android:contentDescription="@null" />

        <ImageView
            android:id="@+id/btnRight"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:gravity="end"
            android:src="@drawable/right"
            android:contentDescription="@null" />

    </LinearLayout>


</RelativeLayout>
