<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#FFFFFF">

    <!-- Title -->
    <TextView
        android:id="@+id/titleMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Menu"
        android:textSize="28sp"
        android:textColor="#000000"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="30dp"/>

    <!-- Spacer -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <!-- Fast switch -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/menu_pill"
        android:padding="14dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Fast"
            android:textSize="18sp"
            android:textColor="#2A9D8F"/>

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switchFast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <!-- Spacer -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <!-- Buttons -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnButtonMode"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Start Button Mode"
        android:textSize="18sp"
        app:cornerRadius="28dp"
        app:strokeWidth="3dp"
        app:strokeColor="#2A9D8F"
        android:backgroundTint="@android:color/transparent"
        android:textColor="#2A9D8F"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="16dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSensorMode"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Start Sensor Mode"
        android:textSize="18sp"
        app:cornerRadius="28dp"
        app:strokeWidth="3dp"
        app:strokeColor="#2A9D8F"
        android:backgroundTint="@android:color/transparent"
        android:textColor="#2A9D8F"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="16dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnTopTen"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="Top Ten"
        android:textSize="18sp"
        app:cornerRadius="28dp"
        app:strokeWidth="3dp"
        app:strokeColor="#2A9D8F"
        android:backgroundTint="@android:color/transparent"
        android:textColor="#2A9D8F"/>

    <!-- Spacer -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"/>

</LinearLayout>
